# WeedHounds Unlimited Peer-to-Peer Environment Template
# Copy this file to .env and configure with your actual values

# Docker Environment
DOCKER_CONTAINER=true
DISPLAY=:99.0

# Unlimited Peer Network Configuration
MAX_PEERS=1000
PEER_DISCOVERY_ENABLED=true
PEER_NETWORK_PORT=9100
PEER_HEARTBEAT_INTERVAL=30

# Cannabis Data Cache Configuration
CACHE_SIZE_GB=10
CACHE_COMPRESSION=true
AUTO_CLEANUP_ENABLED=true
TTL_POLICY_STRICT=false

# Database Configuration
DB_HOST=your-database-host
DB_PORT=your-database-port
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=your-database-name

# Cannabis API Keys
DISPENSARY_API_KEY=your-api-key
OTHER_API_KEY=your-other-api-key

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password

# Network Configuration
NGINX_WORKERS=4
MAX_CONNECTIONS=1024

# Service Configuration
TOKEN_SERVICE_PORT=8888
BROWSER_PROXY_PORT=8889
GRAPHQL_PROXY_PORT=8891

# Security Settings
JWT_SECRET=your-jwt-secret
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Tuning
CACHE_TTL=3600
MAX_WORKERS=10
REQUEST_TIMEOUT=30

# DHT Configuration
DHT_MAX_WORKERS=50
DHT_REPLICATION_FACTOR=3
DHT_TASK_TIMEOUT=300
DHT_HEARTBEAT_INTERVAL=30
DHT_MAX_CONCURRENT_TASKS=1
DHT_TASK_POLL_INTERVAL=5